<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:core="clr-namespace:LokPass.Core.Password;assembly=LokPass.Core"
             xmlns:suki="https://github.com/kikipoulet/SukiUI"
             xmlns:viewModels="clr-namespace:LokPass.Desktop.ViewModels"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="100"
             x:Class="LokPass.Desktop.Views.Components.PasswordListItem"
             x:DataType="core:UserPassword"
             x:Name="Root">

    <suki:GlassCard Margin="0,0,0,12" Padding="18">
        <Grid ColumnDefinitions="Auto,*,Auto">

            <!-- Content -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                <TextBlock FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,8"
                           Text="{Binding Title}" />

                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="ðŸ‘¤ "
                               FontSize="11"
                               Opacity="0.6" />
                    <TextBlock Text="{Binding Username}"
                               FontSize="11"
                               Opacity="0.85" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="ðŸ”‘ "
                               FontSize="11"
                               Opacity="0.6" />
                    <TextBlock Text="{Binding DecryptedPassword}"
                               FontSize="11"
                               Opacity="0.6" />
                </StackPanel>
            </StackPanel>

            <!-- Actions -->
            <StackPanel Grid.Column="2"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Spacing="6"
                        DataContext="{Binding $parent[Window].DataContext, FallbackValue={x:Null}}"
                        x:DataType="viewModels:MainWindowViewModel"
                        x:CompileBindings="True">

                <Button
                    Command="{Binding ShowPasswordCommand}"
                    CommandParameter="{Binding #Root.DataContext}"
                    Width="100"
                    Height="40"
                    FontSize="10"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    AutomationProperties.Name="Show password">
                    <TextBlock Text="View" />
                    <ToolTip.Tip>Show password</ToolTip.Tip>
                </Button>

                <Button
                    Command="{Binding CopyUsernameCommand}"
                    CommandParameter="{Binding #Root.DataContext}"
                    Width="100"
                    Height="40"
                    FontSize="10"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    AutomationProperties.Name="Copy username">
                    <TextBlock Text="Copy User" />
                    <ToolTip.Tip>Copy username (Ctrl+C)</ToolTip.Tip>
                </Button>

                <Button
                    Command="{Binding CopyPasswordCommand}"
                    CommandParameter="{Binding #Root.DataContext}"
                    Width="100"
                    Height="40"
                    FontSize="10"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    AutomationProperties.Name="Copy password">
                    <TextBlock Text="Copy Pwd" />
                    <ToolTip.Tip>Copy password (Ctrl+P)</ToolTip.Tip>
                </Button>

                <Button
                    Command="{Binding EditUserPasswordCommand}"
                    CommandParameter="{Binding #Root.DataContext}"
                    Width="100"
                    Height="40"
                    FontSize="10"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    AutomationProperties.Name="Edit password entry">
                    <TextBlock Text="Edit" />
                    <ToolTip.Tip>Edit (Ctrl+E)</ToolTip.Tip>
                </Button>

                <Button
                    Command="{Binding DeleteUserPasswordCommand}"
                    CommandParameter="{Binding #Root.DataContext}"
                    Width="100"
                    Height="40"
                    FontSize="10"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    AutomationProperties.Name="Delete password entry">
                    <TextBlock Text="Delete" />
                    <ToolTip.Tip>Delete (Delete)</ToolTip.Tip>
                </Button>
            </StackPanel>
        </Grid>
    </suki:GlassCard>
</UserControl>