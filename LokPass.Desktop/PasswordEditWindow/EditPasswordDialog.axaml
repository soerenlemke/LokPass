<suki:SukiWindow xmlns="https://github.com/avaloniaui"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:suki="https://github.com/kikipoulet/SukiUI"
                 xmlns:passwordEditWindow="clr-namespace:LokPass.Desktop.PasswordEditWindow"
                 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                 x:Class="LokPass.Desktop.PasswordEditWindow.EditPasswordDialog"
                 x:DataType="passwordEditWindow:EditPasswordDialog"
                 Title="EditPasswordDialog">

    <Design.DataContext>
        <passwordEditWindow:EditPasswordDialogViewModel />
    </Design.DataContext>

    <suki:GlassCard Margin="20">
        <StackPanel Spacing="16">
            <TextBlock Text="Edit Password Entry"
                       FontSize="20"
                       FontWeight="Bold"
                       Margin="0,0,0,12" />

            <!-- Title -->
            <StackPanel>
                <TextBlock Text="Title"
                           FontSize="12"
                           Opacity="0.7"
                           Margin="0,0,0,4" />
                <TextBox Text="{Binding NewTitle}"
                         Watermark="e.g., GitHub Account"
                         Height="40" />
            </StackPanel>

            <!-- Username -->
            <StackPanel>
                <TextBlock Text="Username"
                           FontSize="12"
                           Opacity="0.7"
                           Margin="0,0,0,4" />
                <TextBox Text="{Binding NewUsername}"
                         Watermark="username"
                         Height="40" />
            </StackPanel>

            <!-- Password -->
            <StackPanel>
                <TextBlock Text="Password"
                           FontSize="12"
                           Opacity="0.7"
                           Margin="0,0,0,4" />
                <TextBox Text="{Binding NewPassword}"
                         PasswordChar="â€¢"
                         Watermark="password"
                         Height="40" />
            </StackPanel>

            <!-- Buttons -->
            <Grid ColumnDefinitions="*,*" Margin="0,20,0,0">
                <Button Grid.Column="0"
                        Content="Cancel"
                        Command="{Binding CancelCommand}"
                        Height="40"
                        HorizontalAlignment="Stretch" />

                <Button Grid.Column="1"
                        Content="Save"
                        Command="{Binding SaveCommand}"
                        Height="40"
                        HorizontalAlignment="Stretch" />
            </Grid>
        </StackPanel>
    </suki:GlassCard>

</suki:SukiWindow>